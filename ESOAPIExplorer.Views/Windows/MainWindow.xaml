<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ESOAPIExplorer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ESOAPIExplorer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Title="ESO API Explorer">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>
    
    <Grid x:Name="MainGrid">
        <NavigationView
            x:Name="NavigationViewControl"
            AlwaysShowHeader="False"
            IsBackButtonVisible="Collapsed"
            IsTabStop="False"
            IsTitleBarAutoPaddingEnabled="False"
            IsPaneOpen="False"
            ItemInvoked="NavigationViewControl_ItemInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Content="Home" Tag="ESOAPIExplorer.Views.HomeView"/>
            </NavigationView.MenuItems>

            <Frame Grid.Column="1" x:Name="NavFrame"/>
        </NavigationView>
    </Grid>
</Window>
